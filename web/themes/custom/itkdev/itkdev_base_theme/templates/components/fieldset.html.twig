
{%
  set classes = [
    'js-form-item',
    'form-item',
    'js-form-wrapper',
    'form-wrapper',
  ]
%}
<fieldset{{ attributes.addClass(classes) }}>
  {%
    set legend_span_classes = [
      'fieldset-legend',
      required ? 'js-form-required',
      required ? 'form-required',
    ]
  %}
  <legend>
  <div class="p-5">
    <h2 class="text-lg font-semibold dark:text-white my-0">{{ legend.title }}</h2>
   </div>
  </legend>
  <div class="border-b border-primary w-full"></div>
  <div class="px-5 py-5">
   {{ children }}
   </div>
</fieldset>
