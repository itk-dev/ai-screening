{% if breadcrumb %}
  <div class="container mx-auto px-3 text-secondary my-3 flex justify-end">
    <nav role="navigation" aria-labelledby="system-breadcrumb">
      <h2 id="system-breadcrumb" class="visually-hidden">{{ 'Breadcrumb'|t }}</h2>
      <ol class="flex gap-1">
      {% for item in breadcrumb %}
        <li>
        {% if loop.last %}
            <a class="text-green-700 font-semibold" href="{{ item.url }}">{{ item.text }}</a>
          {% else %}
            {% if item.url %}
              <a class="font-semibold" href="{{ item.url }}">{{ item.text }}</a> <span>/</span>
            {% else %}
              {{ item.text }}
            {% endif %}
          {% endif %}
        </li>
      {% endfor %}
      </ol>
    </nav>
  </div>
{% endif %}
